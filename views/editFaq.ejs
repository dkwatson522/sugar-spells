<%- include ('../views/partials/header') %>
<%- include ('../views/partials/navbar') %>
<div class="w-full flex justify-around">
  <div class="bg-gray-200 w-full py-4">
    <!-- Edit Frequently Asked Question -->
    <div id="signature" class="w-full px-6">
      <div class="flex flex-col">
        <div class="">
          <form class="flex justify-around w-full px-6" action="/faqs/<%=faq._id%>?_method=PUT" method="POST">
            <div class="bg-white shadow sm:rounded-md sm:overflow-hidden">
              <div class="px-4 py-5 sm:p-6">
<!-- Question -->
                <div class="mb-4 text-xl">
                  <span>Frequently Asked Question</span>
                  <div class="">
                    <label for="question" class="block text-sm font-medium leading-5 text-gray-700">
                      Question
                    </label>
                    <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
                      <input id="question" name="question" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder="" value="<%= faq.question %>">
                    </div>
                  </div>
                </div>
<!-- Response -->
                <div class="mt-6">
                  <label for="response" class="block text-sm leading-5 font-medium text-gray-700">
                    Response
                  </label>
                  <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
                    <textarea id="response" name="response" rows="5" class="form-textarea bg-gray-400 flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder=""><%= faq.response %></textarea>
                  </div>
                  <p class="mt-2 text-sm text-gray-500">
                    Brief description of the response to be displayed to the customer.
                  </p>
                </div>
<!-- Reference -->
                <div class="mt-6">
                  <label for="reference" class="block text-sm leading-5 font-medium text-gray-700">
                    Reference
                  </label>
                  <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
                    <input id="reference" name="reference" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder="" value="<%= faq.reference %>">
                  </div>
                  <p class="mt-2 text-sm text-gray-500">
                    Input URL for reference.
                  </p>
                </div>


              </div>
              <div class="bg-white flex justify-start sm:p-6">
                <span class="rounded-md shadow-sm">
                  <button type="submit"
                    class="inline-flex justify-center py-2 px-4 border border-transparent text-xl leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                    Add
                  </button>
                </span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('../views/partials/footer') %>
