<%- include ('../views/partials/header') %>
<%- include ('../views/partials/navbar') %>
<div class="w-full flex justify-around">
  <div class="bg-gray-200 w-full">
    <div class="my-2 p-4 text-3xl sm:text-4xl md:text-5xl text-center leading-tight font-medium text-red-500">
      <h1>Add Flavors</h1>
    </div>

    <!-- Add Signature Flavor -->
    <div id="signature" class="w-full px-6">
      <div class="flex flex-col">
        <div class="">
          <form class="flex justify-around w-full px-6" action="/addflavors" method="POST">
            <div class="bg-white shadow sm:rounded-md sm:overflow-hidden">
              <div class="px-4 py-5 sm:p-6">
                <div class="mb-4 text-xl">
                  <span>Signature Flavor</span>
                  <div class="">
                    <label for="flavor" class="block text-sm font-medium leading-5 text-gray-700">
                      Name
                    </label>
                    <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
                      <input id="name" name="signature[name]" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder="">
                    </div>
                  </div>
                </div>

                <div class="mt-6">
                  <label for="description" class="block text-sm leading-5 font-medium text-gray-700">
                    Description
                  </label>
                  <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
                    <textarea id="description" name="signature[description]" rows="3" class="form-textarea bg-gray-400 flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder=""></textarea>
                  </div>
                  <p class="mt-2 text-sm text-gray-500">
                    Brief description of the flavor to be displayed to the customer.
                  </p>
                </div>
              </div>
              <div class="bg-white flex justify-start sm:p-6">
                <span class="rounded-md shadow-sm">
                  <button type="submit"
                    class="inline-flex justify-center py-2 px-4 border border-transparent text-xl leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                    Add
                  </button>
                </span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Add Build Your Own Ingredient -->
    <div id="build" class="w-full px-6">
      <div class="flex flex-col">
        <div class="my-5">
          <form action="/addflavors" method="POST">
            <div class="px-4 py-5 sm:p-6 bg-white shadow sm:rounded-md sm:overflow-hidden">
              <div class="mb-4 text-xl">
                <span>Build Your Own</span>

                <div class="flex bg-white">
                  <div class="w-1/3 bg-gray-200 mx-2 rounded-md">
                    <div class="">
                      <form action="/addflavors" method="POST">
                        <div class="shadow sm:rounded-md sm:overflow-hidden">
                          <div class="px-4 py-5 sm:p-6">
                            <div class="grid grid-cols-3 gap-6">
                              <div class="col-span-3 sm:col-span-2">
                                <label for="company_website" class="block text-sm font-medium leading-5 text-gray-700">
                                  Base
                                </label>
                                <div class="mt-1 flex rounded-md shadow-sm">
                                  <input id="base" name="buildYourOwn[base][ingredient]" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder="">
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="flex justify-start sm:p-6">
                            <span class="inline-flex rounded-md shadow-sm">
                              <button type="submit"
                                class="inline-flex justify-center py-2 px-4 border border-transparent text-xl leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                                Add
                              </button>
                            </span>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>


                  <div class="w-1/3 bg-gray-200 mx-2 rounded-md">
                    <form action="/addflavors" method="POST">
                      <div class="shadow sm:rounded-md sm:overflow-hidden">
                        <div class="px-4 py-5 sm:p-6">
                          <div class="grid grid-cols-3 gap-6">
                            <div class="col-span-3 sm:col-span-2">
                              <label for="filling" class="block text-sm font-medium leading-5 text-gray-700">
                                Filling
                              </label>
                              <div class="mt-1 flex rounded-md shadow-sm">
                                <input id="filling" name="buildYourOwn[filling][ingredient]" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder="">
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="flex justify-start sm:p-6">
                          <span class="inline-flex rounded-md shadow-sm">
                            <button type="submit"
                              class="inline-flex justify-center py-2 px-4 border border-transparent text-xl leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                              Add
                            </button>
                          </span>
                        </div>
                      </div>
                    </form>
                  </div>


                  <div class="w-1/3 bg-gray-200 mx-2 rounded-md">
                    <form action="/addflavors" method="POST">
                      <div class="shadow sm:rounded-md sm:overflow-hidden">
                        <div class="px-4 py-5 sm:p-6">
                          <div class="grid grid-cols-3 gap-6">
                            <div class="col-span-3 sm:col-span-2">
                              <label for="company_website" class="block text-sm font-medium leading-5 text-gray-700">
                                Topping
                              </label>
                              <div class="mt-1 flex rounded-md shadow-sm">
                                <input id="topping" name="buildYourOwn[topping][ingredient]" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder="">
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="flex justify-start sm:p-6">
                          <span class="inline-flex rounded-md shadow-sm">
                            <button type="submit"
                              class="inline-flex justify-center py-2 px-4 border border-transparent text-xl leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                              Add
                            </button>
                          </span>
                        </div>
                      </div>
                    </form>

                  </div>
                </div>

              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include ('../views/partials/footer') %>
