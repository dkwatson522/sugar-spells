<div class="w-full flex justify-around">
  <form class="flex justify-around w-2/3 px-6" action="/new-order" method="POST">
    <div class="bg-white shadow sm:rounded-md sm:overflow-hidden">
      <div class="px-4 py-5 sm:p-6">
        <span class="text-lg">Create an Order Inquiry</span>
        <!-- email input -->
        <div class="mb-4 text-xl">
          <label for="email" class="block text-sm font-medium leading-5 text-gray-700">
            Email
          </label>
          <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
            <input id="email" name="email" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-lg sm:leading-5" placeholder="">
          </div>
          <span class="text-xs text-red-400">*Required</span>
        </div>

        <!-- name input -->
        <div class="mb-4 text-xl">
          <label for="name" class="block text-sm font-medium leading-5 text-gray-700">
              Name
          </label>
          <div class="mt-1 flex justify-between">
              <!-- first name -->
            <input id="name" name="name[first]" class="bg-gray-400 form-input w-1/3 rounded-none rounded-md transition duration-150 p-2 ease-in-out text-lg sm:leading-5" placeholder="First Name">
              <!-- last name -->
            <input id="name" name="name[last]" class="bg-gray-400 form-input w-1/3 rounded-none rounded-md transition duration-150 p-2 ease-in-out text-lg sm:leading-5" placeholder="Last Name">
          </div>
          <span class="text-xs text-red-400">*Required</span>
        </div>

        <!-- phone number input -->
        <div class="mb-4 text-xl">
          <label for="phone number" class="block text-sm font-medium leading-5 text-gray-700">
              Phone Number
            </label>
            <div class="mt-1 flex justify-start">
              <input id="name" name="phoneNumber" class="bg-gray-400 form-input  block w-1/3 rounded-none rounded-md transition duration-150 p-2 ease-in-out text-lg sm:leading-5" placeholder="(xxx)-xxx-xxxx">
          </div>
        </div>
        <!-- event information -->
        <div class="w-full flex justify-between">
          <!-- event date -->
          <div class="mb-4 text-xl mr-2">
            <label class="block text-sm font-medium leading-5 text-gray-700">
              Select Date
            </label>
            <input class="form-input py-2 px-3  text-gray-700 text-lg w-full bg-gray-400 rounded" type="text" name="eventDate" id="datepicker" placeholder="Select a Date">
            <span class="text-xs text-red-400">*Required</span>
          </div>
          <!-- event time -->
          <div class="mb-4 text-xl mx-2">
            <label class="block text-sm font-medium leading-5 text-gray-700">
              Select Time
            </label>
            <select class="form-input py-2 px-3  text-gray-700 text-lg w-full bg-gray-400 rounded" name="time" id="time">
              <option value="8:00 AM">8:00 AM</option>
              <option value="8:15 AM">8:15 AM</option>
              <option value="8:30 AM">8:30 AM</option>
              <option value="8:45 AM">8:45 AM</option>

              <option value="9:00 AM">9:00 AM</option>
              <option value="9:15 AM">9:15 AM</option>
              <option value="9:30 AM">9:30 AM</option>
              <option value="9:45 AM">9:45 AM</option>

              <option value="10:00 AM">10:00 AM</option>
              <option value="10:15 AM">10:15 AM</option>
              <option value="10:30 AM">10:30 AM</option>
              <option value="10:45 AM">10:45 AM</option>

              <option value="11:00 AM">11:00 AM</option>
              <option value="11:15 AM">11:15 AM</option>
              <option value="11:30 AM">11:30 AM</option>
              <option value="11:45 AM">11:45 AM</option>

              <option value="12:00 PM">12:00 PM</option>
              <option value="12:15 PM">12:15 PM</option>
              <option value="12:30 PM">12:30 PM</option>
              <option value="12:45 PM">12:45 PM</option>

              <option value="1:00 PM">1:00 PM</option>
              <option value="1:15 PM">1:15 PM</option>
              <option value="1:30 PM">1:30 PM</option>
              <option value="1:45 PM">1:45 PM</option>

              <option value="2:00 PM">2:00 PM</option>
              <option value="2:15 PM">2:15 PM</option>
              <option value="2:30 PM">2:30 PM</option>
              <option value="2:45 PM">2:45 PM</option>

              <option value="3:00 PM">3:00 PM</option>
              <option value="3:15 PM">3:15 PM</option>
              <option value="3:30 PM">3:30 PM</option>
              <option value="3:45 PM">3:45 PM</option>

              <option value="4:00 PM">4:00 PM</option>
              <option value="4:15 PM">4:15 PM</option>
              <option value="4:30 PM">4:30 PM</option>
              <option value="4:45 PM">4:45 PM</option>

              <option value="5:00 PM">5:00 PM</option>
              <option value="5:15 PM">5:15 PM</option>
              <option value="5:30 PM">5:30 PM</option>
              <option value="5:45 PM">5:45 PM</option>

              <option value="6:00 PM">6:00 PM</option>
              <option value="6:15 PM">6:15 PM</option>
              <option value="6:30 PM">6:30 PM</option>
              <option value="6:45 PM">6:45 PM</option>

              <option value="7:00 PM">7:00 PM</option>
              <option value="7:15 PM">7:15 PM</option>
              <option value="7:30 PM">7:30 PM</option>
              <option value="7:45 PM">7:45 PM</option>

              <option value="8:00 PM">8:00 PM</option>
              <option value="8:15 PM">8:15 PM</option>
              <option value="8:30 PM">8:30 PM</option>
              <option value="8:45 PM">8:45 PM</option>

              <option value="9:00 PM">9:00 PM</option>
              <option value="9:15 PM">9:15 PM</option>
              <option value="9:30 PM">9:30 PM</option>
              <option value="9:45 PM">9:45 PM</option>
              <option value="10:00 PM">10:00 PM</option>
            </select>
            <span class="text-xs text-red-400">*Required</span>
          </div>
          <!-- event type -->
          <div class="mb-4 text-xl ml-2">
            <label class="block text-sm font-medium leading-5 text-gray-700">
              Event Type
            </label>
            <select class="form-input py-2 px-3  text-gray-700 text-lg w-full bg-gray-400 rounded" name="eventType">
              <option class="" value="wedding">Wedding</option>
              <option class="" value="birthday">Birthday</option>
              <option class="" value="anniversary">Anniversary</option>
              <option class="" value="christening">Christening</option>
              <option class="" value="other">Other</option>

            </select>
            <span class="text-xs text-red-400">*Required</span>
          </div>
        </div>

        <!-- description -->
        <div class="mt-6">
          <label for="description" class="block text-sm leading-5 font-medium text-gray-700">
            Description
          </label>
          <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
            <textarea id="description" name="description" rows="3" class="form-textarea bg-gray-400 flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-lg sm:leading-5" placeholder="Provide a brief description of order you are looking to create"></textarea>
          </div>
          <span class="text-xs text-red-400">*Required</span>
        </div>


        <div class="mt-6 w-full flex justify-around">
          <div class="w-1/4 mb-4 text-xl mr-2">
            <label for="photo" class="block text-sm leading-5 font-medium text-gray-700">
              Photo
            </label>
            <input class="form-input py-2 px-3  text-gray-700 text-lg w-full bg-gray-400 rounded" type="text" name="photo"  placeholder="Add a photo">
            <!-- <span class="text-xs text-red-400">*Required</span> -->

          </div>

          <div class="w-1/2 mb-4 text-xl mr-2">
            <label for="addOn" class="block text-sm leading-5 font-medium text-gray-700">
              Add On
            </label>
            <div class="flex flex-row flex-wrap justify-around">
              <%services.forEach((service) => { %>
                <div class="mt-4 px-2">
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input name="interests" value="<%= service.item %>" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                    </div>
                    <div class="ml-3 text-sm leading-5">
                      <label for="comments" class="font-medium text-gray-700"><%= service.item %></label>
                    </div>
                  </div>
                </div>
              <%}) %>
          </div>
        </div>

        <div class="w-1/4 mb-4 text-xl mr-2">
          <div class="mb-4 text-xl mr-2">
            <label for="cakeTiers" class="block text-sm leading-5 font-medium text-gray-700">
              Cake Tiers:
            </label>
            <select class="form-input py-2 px-3 text-gray-700 text-lg w-full bg-gray-400 rounded" name="cakeTiers">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
            </select>
          </div>

        </div>
      </div>
      <div class="bg-white flex justify-start sm:p-6">
        <span class="rounded-md shadow-sm">
          <button type="submit"
            class="inline-flex justify-center py-2 px-4 border border-transparent text-xl leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
            Add
          </button>
        </span>
      </div>
    </div>
  </form>
</div>
