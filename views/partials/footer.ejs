    } else if (treat === 'rice krispie pops') {
      $(`#${treatId}-select`).slideDown().show()
    } else if (treat === 'chocolate dipped strawberries') {
      $(`#${treatId}-select`).slideDown().show()
    } else if (treat === 'cake pops') {
      $(`#${treatId}-select`).slideDown().show()
    }
  }


  $("#signatureCake-select-1").hide( "slow" )
  $("#buildYourOwnCake-select-1").hide( "slow" )
  $("#signatureCake-select-2").hide( "slow" )
  $("#buildYourOwnCake-select-2").hide( "slow" )
  $("#signatureCake-select-3").hide( "slow" )
  $("#buildYourOwnCake-select-3").hide( "slow" )

  $("#flavorType-select-1").change(() => {
    const flavorType = event.target.value
    if (flavorType === "signature") {
      $("#signatureCake-select-1").slideDown().show()
      $("#buildYourOwnCake-select-1").hide( "slow" )
    } else if (flavorType === "buildYourOwn") {
