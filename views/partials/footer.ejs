<script type=" text/javascript">
  $("#cake-select").hide()
  $("#sugarCookies-select").hide()
  $("#cupcakes-select").hide()
  $("#riceKrispiePops-select").hide()
  $("#chocolateDippedStrawberries-select").hide()
  $("#cakePops-select").hide()






  $("#cakeTier-select").change(() => {
    const cakeTierAmount = event.target.value

    const deliveryAddressRequired = () => {
      $("#delivery").prop('checked', true);
      $("#address-input").slideDown().show()
    }


    if (cakeTierAmount === "1") {
      $("#cakeTier-2").hide( "slow" )
      $("#cakeTier-3").hide( "slow" )
      $("#address-input").hide( "slow" )
    } else if (cakeTierAmount === "2") {
      $("#cakeTier-2").slideDown().show()
      $("#cakeTier-3").hide( "slow" )
      deliveryAddressRequired()
    } else if (cakeTierAmount === "3") {
      $("#cakeTier-2").slideDown().show( "slow" )
      $("#cakeTier-3").slideDown().show( "slow" )
      deliveryAddressRequired()
    }
  })
  //hides delivery address input on initial load
  // $("#address-input").hide()
  //logic to hide/show text area for delivery address input
  $('#delivery-select').change(() => {
    if ($(event.target).is(':checked')) {
      const deliveryOption = event.target.value.toLowerCase();

      if (deliveryOption === 'delivery') {
        $("#address-input").slideDown().show()
      }
    }

    if ($(event.target).is(':checked')) {
      const deliveryOption = event.target.value.toLowerCase();
      if (deliveryOption === 'pick up') {
        $("#address-input").slideUp().hide( "slow" )
      }
    }
  })

  //treats hide/show logic
  $('#treat').change(() => {
    if ($(event.target).is(':checked')) {
      const treat = event.target.value.toLowerCase();
      const treatId = event.target.id;

      if (treat === 'cake') {
        $(`#${treatId}-select`).slideDown().show()
      } else if (treat === 'sugar cookies') {
        $(`#${treatId}-select`).slideDown().show()
      } else if (treat === 'cupcakes') {
        $(`#${treatId}-select`).slideDown().show()
      } else if (treat === 'rice krispie pops') {
        $(`#${treatId}-select`).slideDown().show()
      } else if (treat === 'chocolate dipped strawberries') {
        $(`#${treatId}-select`).slideDown().show()
      } else if (treat === 'cake pops') {
        $(`#${treatId}-select`).slideDown().show()
      }
    }

    if (!$(event.target).is(':checked')) {
      const treat = event.target.value.toLowerCase();
      const treatId = event.target.id;

      if (treat === 'cake') {
        $(`#${treat}-select`).slideUp().hide( "slow" )
      } else if (treat === 'sugar cookies') {
        $(`#${treatId}-select`).slideUp().hide( "slow" )
      } else if (treat === 'cupcakes') {
        $(`#${treatId}-select`).slideUp().hide( "slow" )
      } else if (treat === 'rice krispie pops') {
        $(`#${treatId}-select`).slideUp().hide( "slow" )
      } else if (treat === 'chocolate dipped strawberries') {
        $(`#${treatId}-select`).slideUp().hide( "slow" )
      } else if (treat === 'cake pops') {
        $(`#${treatId}-select`).slideUp().hide( "slow" )
      }
    }
  })


  //treats hide/show logic on load
  const onLoadCheckTreat = () => {
    $('#treat input').each(function() {
      // console.log("here")
      if ($(this).is(':checked')) {
        const treat = this.value.toLowerCase();
        const treatId = this.id;
        // console.log(treat)

        if (treat === 'cake') {
          $(`#${treatId}-select`).slideDown().show()
        } else if (treat === 'sugar cookies') {
          $(`#${treatId}-select`).slideDown().show()
        } else if (treat === 'cupcakes') {
          $(`#${treatId}-select`).slideDown().show()
        } else if (treat === 'rice krispie pops') {
          $(`#${treatId}-select`).slideDown().show()
        } else if (treat === 'chocolate dipped strawberries') {
          $(`#${treatId}-select`).slideDown().show()
        } else if (treat === 'cake pops') {
          $(`#${treatId}-select`).slideDown().show()
        }
      } else {
        if (treat === 'cake') {
          $(`#${treat}-select`).slideUp().hide( "slow" )
        } else if (treat === 'sugar cookies') {
          $(`#${treatId}-select`).slideUp().hide( "slow" )
        } else if (treat === 'cupcakes') {
          $(`#${treatId}-select`).slideUp().hide( "slow" )
        } else if (treat === 'rice krispie pops') {
          $(`#${treatId}-select`).slideUp().hide( "slow" )
        } else if (treat === 'chocolate dipped strawberries') {
          $(`#${treatId}-select`).slideUp().hide( "slow" )
        } else if (treat === 'cake pops') {
          $(`#${treatId}-select`).slideUp().hide( "slow" )
        }
      }
    })
  }
  onLoadCheckTreat()





  if ($('#target input').is(':checked')) {
    const treat = event.target.value.toLowerCase();
    const treatId = event.target.id;

    if (treat === 'cake') {
      $(`#${treatId}-select`).slideDown().show()
    } else if (treat === 'sugar cookies') {
      $(`#${treatId}-select`).slideDown().show()
    } else if (treat === 'cupcakes') {
