      $("#buildYourOwnCake-select-2").slideDown().show()
    }
  })
  $("#flavorType-select-3").change(() => {
    const flavorType = event.target.value
    if (flavorType === "signature") {
      $("#signatureCake-select-3").slideDown().show()
      $("#buildYourOwnCake-select-3").hide( "slow" )
    } else if (flavorType === "buildYourOwn") {
      $("#signatureCake-select-3").hide( "slow" )
      $("#buildYourOwnCake-select-3").slideDown().show()
    }
  })
  $("#delete-photo-1").hide()
  $("#delete-photo-2").hide()

  $("#upload").change(() => {
    $("#files-chosen-1").text(event.target.files[0].name)
    const tmppath1 = URL.createObjectURL(event.target.files[0]);
    // console.log(event.target.files)
    //get parent using closest and then find img element
    $("#preview-image-1").attr('src', tmppath1).show();
    $("#delete-photo-1").show()
    if (event.target.files.length === 2) {
      $("#files-chosen-2").text(event.target.files[1].name)
      const tmppath2 = URL.createObjectURL(event.target.files[1]);
      //get parent using closest and then find img element
      $("#preview-image-2").attr('src', tmppath2).show();
      $("#delete-photo-2").show()
    }

  })

  $("#delete-photo-1").click(() => {
    $("#files-chosen-1")
    $(event.target).closest("div").find("img").attr('src', null);
    $("#files-chosen-1").text('No file chosen')
    $("#preview-image-1").hide( "slow" )
    $("#delete-photo-1").hide( "slow" )
  })
  $("#delete-photo-2").click(() => {
    $("#files-chosen-2")
    $(event.target).closest("div").find("img").attr('src', null);
    $("#files-chosen-2").text('')
    $("#preview-image-2").hide( "slow" )
    $("#delete-photo-2").hide( "slow" )
  })

  $("#submit-button").click(() => {
    //removes attributes from all hidden elemenets except image input since we do not want to show that ever
    $(":hidden").not("#upload").attr("name","");
  })

  $("#flash").click(() => {
    $("#flash").remove()
  })
</script>
