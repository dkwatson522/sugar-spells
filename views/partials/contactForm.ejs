<div class="w-full flex justify-around bg-gray-200">
  <form class="sm:w-3/5 border rounded p-10 bg-white mt-5" action="/contact" accept-charset="UTF-8" method="post"><input type="hidden" value="">

    <div class="w-full mb-8">
      <label class="block text-gray-700 text-xs font-bold mb-2 uppercase" htmlfor="name">
        Name
      </label>

      <input class="form-input py-2 px-3 text-gray-700 text-2xl w-full bg-gray-400 rounded" type="text" name="name" id="contact_name">
    </div>

    <div class="w-full mb-8">
      <label class="block text-gray-700 text-xs font-bold mb-2 uppercase" htmlfor="email">
        Email
      </label>

      <input class="form-input py-2 px-3 text-gray-700 text-2xl w-full bg-gray-400 rounded" type="text" name="email" id="contact_email">
    </div>

    <div class="w-full mb-8">
      <label class="block text-gray-700 text-xs font-bold mb-2 uppercase" htmlfor="subject">
        Subject
      </label>

      <input class="form-input py-2 px-3 text-gray-700 text-2xl w-full bg-gray-400 rounded" type="text" name="subject" id="contact_subject">
    </div>

    <div class="w-full mb-8">
      <label class="block text-gray-700 text-xs font-bold mb-2 uppercase">
        Delivery Date
      </label>

      <input class="form-input py-2 px-3 text-gray-700 text-2xl w-full bg-gray-400 rounded" type="text" name="deliveryDate" id="datepicker" placeholder="Select a Date">
    </div>

    <div class="w-full mt-5 md:mt-0">
      <fieldset>
        <legend class="block text-gray-700 text-xs font-bold mb-2 uppercase">
          I'm Interested In
        </legend>
        <div class="flex flex-row flex-wrap justify-around w-full">
          <div class="mt-4 px-2 w-1/3">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input name="interests" value="cake" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
              </div>
              <div class="ml-3 text-sm leading-5">
                <label for="comments" class="font-medium text-gray-700">Cake</label>
              </div>
            </div>
          </div>
          <div class="mt-4 px-2 w-1/3">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input name="interests" value="sugar cookies" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
              </div>
              <div class="ml-3 text-sm leading-5">
                <label for="interests" class="font-medium text-gray-700">Sugar Cookies</label>
              </div>
            </div>
          </div>
          <div class="mt-4 px-2 w-1/3">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input name="interests" value="cupcakes" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
              </div>
              <div class="ml-3 text-sm leading-5">
                <label for="interests" class="font-medium text-gray-700">Cupcakes</label>
              </div>
            </div>
          </div>
          <div class="mt-4 px-2 w-1/3">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input name="interests" value="rice krispie pops" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
              </div>
              <div class="ml-3 text-sm leading-5">
                <label for="interests" class="font-medium text-gray-700">Rice Krispie Pops</label>
              </div>
            </div>
          </div>
          <div class="mt-4 px-2 w-1/3">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input name="interests" value="chocolate covered strawberries" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
              </div>
              <div class="ml-3 text-sm leading-5">
                <label for="interests" class="font-medium text-gray-700">Chocolate Covered Strawberries</label>
              </div>
            </div>
          </div>
          <div class="mt-4 px-2 w-1/3">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input name="interests" value="cake popsicles" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
              </div>
              <div class="ml-3 text-sm leading-5">
                <label for="interests" class="font-medium text-gray-700">Cake Popsicles</label>
              </div>
            </div>
          </div>
        </div>

      </fieldset>
    </div>

    <div class="w-full my-4">
      <label class="block text-gray-700 text-xs font-bold mb-2 uppercase" htmlfor="message">
        Message
      </label>

      <textarea placeholder="" class="form-textarea text-2xl leading-tight text-gray-700 w-full bg-gray-400 text-gray-800 p-3 rounded" rows="5" cols="80" name="message" id="contact_message"></textarea>
    </div>

    <div class="flex justify-start">
      <button type="submit" class="p-2 px-8 rounded-lg font-semibold bg-orange-500 text-white hover:bg-orange-600 text-lg">
        Send
      </button>
    </div>
  </form>
</div>
