<%- include ('../views/partials/header') %>
<%- include ('../views/partials/navbar') %>
<div class="flex flex-col py-12 w-full px-24 text-gray-700 text-center bg-gray-200">
  <div class="rounded-md bg-white">
    <h1 class="font-bold text-4xl mb-2">Services & Prices</h1>

    <div class="flex flex-col w-full">
      <!-- Services add button -->
      <% if (user) { %>
        <div class="text-xl text-blue-400 hover:text-blue-200">
          <a href="/add-services">
            <i class="fas fa-plus-circle"></i>
            <span>Add Services</span>
          </a>
        </div>
      <% } %>
      <!-- Services start -->
      <% services.forEach((service) => { %>
        <div class="flex flex-row items-center">
          <div class="w-1/3 py-2 flex items-center justify-start">
            <span class="px-4">
              <img class="fill-current w-16 h-16" src="<%= service.image %>" alt="">
            </span>
            <span class="uppercase px-4"><%= service.item %></span>
            <% if(user) { %>
              <div class="flex justify-end">
                <form class="p-2" action="/services/<%= service._id %>?_method=DELETE" method="POST">
                  <button><i class="fas fa-trash" style="color: #AA3838"></i></button>
                </form>
                <form class="p-2" action="/services/<%= service._id %>" method="GET">
                  <button><i class="fas fa-edit" style="color: #044701"></i></button>
                </form>
              </div>
            <% } %>
          </div>
          <div class="w-1/3 flex justify-center items-center">
            <div class="w-full px-4">
              <i class="fas fa-grip-lines"></i>
            </div>
          </div>
          <div class="w-1/3 flex justify-end">
            <span class="px-4">starting at</span>
            <span class="px-4">$<%= service.price %></span>

          </div>
        </div>
      <% }) %>
      <!-- Services end -->
    </div>
    <div class="mb-6 text-md text-indigo-400 tracking-wider">
      <p>
        Since everything we offer is custom, this is a starting point for simple designs.
      </p>
      <p>
        The complexity of the design will ultimately determine the final pricing.
      </p>
    </div>
  </div>
</div>
<%- include ('../views/partials/footer') %>
