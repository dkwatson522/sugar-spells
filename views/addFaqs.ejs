<%- include ('../views/partials/header') %>
<%- include ('../views/partials/navbar') %>
<div class="flex justify-around">
  <div class="flex-col py-6 my-4 text-gray-700 text-center rounded-md">
    <!-- Add Frequently Asked Question -->
    <div class="border rounded p-6 bg-white max-w-2xl">

      <form class="" action="/add-faq" method="POST">
        <!-- Question -->
        <div class="mb-4 text-3xl">
          <h1>Frequently Asked Question</h1>
          <div class="">
            <label for="question" class="block text-sm font-medium leading-5 text-gray-700">
              Question
            </label>
            <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
              <input id="question" name="question" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder="">
            </div>
          </div>
        </div>
        <!-- Response -->
        <div class="mt-6">
          <label for="response" class="block text-sm leading-5 font-medium text-gray-700">
            Response
          </label>
          <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
            <textarea id="response" name="response" rows="3" class="form-textarea bg-gray-400 flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder=""></textarea>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Brief description of the response to be displayed to the customer.
          </p>
        </div>
        <!-- Reference -->
        <div class="mt-6">
          <label for="reference" class="block text-sm leading-5 font-medium text-gray-700">
            Reference
          </label>
          <div class="bg-gray-400 mt-1 flex rounded-md shadow-sm">
            <input id="reference" name="reference" class="bg-gray-400 form-input flex-1 block w-full rounded-none rounded-md transition duration-150 p-2 ease-in-out text-2xl sm:leading-5" placeholder="">
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Input URL for reference.
          </p>
        </div>
        <div class="flex justify-center sm:p-6">
          <span class="rounded-md shadow-sm">
            <button type="submit"
              class="inline-flex justify-center py-2 px-4 border border-transparent text-xl leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
              Add
            </button>
          </span>
        </div>
      </form>

    </div>
  </div>
</div>
<%- include ('../views/partials/footer') %>
